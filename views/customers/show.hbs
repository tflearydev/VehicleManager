<div class="container">
    <h2 class="text-center">{{customer.name}}</h2>
    <div class="text-center">
        <img class="customer-img-banner" src={{customer.imgLink}} alt="">
    </div>
    <div class="text-center">
        <a class="action-btn btn btn-info" href="/{{customer.id}}/edit">EDIT</a>
        <form class="delete-form"action="/{{customer.id}}?_method=DELETE" method="POST">
            <input class="action-btn btn btn-danger" type="submit" value="DELETE">
        </form>
    </div>
    <p>{{customer.description}}</p>

    <h3 class="text-center">Vehicles</h3>
    <ul>
        {{#each customer.vehicleList}}
            {{name}} - {{color}}
        {{/each}}
    </ul>
    </div>
</div>