<div class="container">
  <a href="/{{customer.id}}">Back</a>
  <h2>Edit {{customer.name}}</h2>
  <div class="col-8">
    <form action="/{{customer.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" value="{{customer.name}}">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="text" name="email" id="email" value={{customer.email}}>
      </div>
      <div class="form-group">
        <label for="imgLink">Image</label>
        <input class="form-control" type="text" name="imgLink" id="imgLink" value="{{customer.imgLink}}">
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <textarea class="form-control" name="phone">
          {{customer.phone}}
        </textarea>
      </div>
      <input class="btn btn-info" type="submit" value="UPDATE">
    </form>
  </div>
</div>