<div class="container">
  <a href="/{{customer.id}}">Back</a>
  <h2>Edit {{customer.name}}</h2>
  <div class="col-8">
    <form action="/{{customer.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" value="{{customer.name}}">
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        <input class="form-control" type="number" name="rating" id="rating" value={{customer.rating}}>
      </div>
      <div class="form-group">
        <label for="imgLink">Image</label>
        <input class="form-control" type="text" name="imgLink" id="imgLink" value="{{customer.imgLink}}">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description">
          {{customer.description}}
        </textarea>
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <input class="form-control" type="text" name="category" value="{{customer.category}}">
      </div>
      <input class="btn btn-info" type="submit" value="UPDATE">
    </form>
  </div>
</div>