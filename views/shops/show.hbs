

<div class="card card-center" style="width: 30vw">
  <div class="card-body">
    <h5 class="card-title">{{shop.name}}</h5>
    <p class="card-text">Street: {{shop.address.street}}</p>
    <p class="card-text">City: {{shop.address.city}}</p>
    <p class="card-text">State: {{shop.address.state}}</p>
    <p class="card-text">Zip: {{shop.address.zipCode}}</p>
    <p class="text-left">Phone Number: {{shop.phoneNumber}}</p>
  </div>
</div>



<div class="text-center">
        <form class="delete-form"action="/{{shop.id}}?_method=DELETE" method="POST">
            <input class="action-btn btn btn-danger" type="submit" value="DELETE">
        </form>
