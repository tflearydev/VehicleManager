<h1 class="text-center">Shops List</h1>

{{#each shops}}
<div class="container shops">
  <h2 class="text-left"><a href="/shop/{{id}}">{{name}}</a></h2>
  <p class="text-left">Street: {{address.street}}</p>
  <p class="text-left">City: {{address.city}}</p>
  <p class="text-left">State: {{address.state}}</p>
  <p class="text-left">Zip: {{address.zipCode}}</p>
  <p class="text-left">Phone Number: {{phoneNumber}}</p>
</div>
{{/each}}

<div class="panel-footer row text-center justify-content-center">
  <div class="col-xs-6 text-center">
    <a href="/shop/new" class="action-btn btn btn-primary butn-leg button">Create a New Shop</a>
  </div>
</div>





