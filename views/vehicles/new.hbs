<div class="container">
  <a href="/vehicle">Back</a>
  <h2>Add A Vehicle</h2>
  <div class="col-8">
    <form action="/vehicle" method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Please enter the vehicles name">
      </div>
      <div class="form-group">
        <label class="input-text" for="color">Color</label>
        <input class="form-control" type="text" name="color" id="color"
          placeholder="Please enter the vehicles color">
      </div>

      <input class="btn btn-info" type="submit" value="SUBMIT">
    </form>
  </div>
</div>